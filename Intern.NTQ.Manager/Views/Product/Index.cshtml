@model Intern.NTQ.Library.Common.PagedResult<ProductViewModel>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <p>
        Title: @Html.TextBox("search") <input type="submit" value="Tìm kiếm" />
    </p>
    <p>
        Filter:
        <select name="option" id="option">
            <option value="Trending">Trending</option>
            <option value="Removed">Removed</option>
            <option value="Default">Default</option>
        </select>
        <input type="submit" value="Tìm kiếm" />
    </p>
}

@if (Model.Items.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Slug
            </th>
            <th>
                CreatedAt
            </th>

        </tr>

        @if (@ViewBag.Option == "Removed")
        {
            <p>Here Delete All</p>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Slug)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>

                    <td>
                        @Html.ActionLink("UnRemove", "UnRemove", new { id=item.Id })

                    </td>
                </tr>

            }
        }
        else
        {
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Slug)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id },new {@class= "buttonDelete"})
                    </td>
                </tr>
            }
        }

    </table>
    @for (var i = 0; i < Model.PageCount; i++)
    {
        @Html.ActionLink((i+1).ToString(), "Index", new { page=i+1,search = ViewBag.Search })
    }

}
else
{
    <p>NOTHING</p>
}
@section Scripts{
    <script>
        $(document).ready(function() {
            console.log("ready!");
            $('.buttonDelete').click(function() {
                return confirm('Do you Want to delete?')
            });
        });
    </script>
}